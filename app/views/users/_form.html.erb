<div class="form-group">
  <%= form_for(user) do |f| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field roboto-c uppercase lightgrey">
      <h5><%= f.label :email %></h5>
      <%= f.text_field :email, class: "form-control formtext bree" %>
    </div>

    <div class="field roboto-c uppercase lightgrey">
      <h5><%= f.label :name, "First name" %></h5>
      <%= f.text_field :name, class: "form-control formtext bree" %>
    </div>

    <div class="field roboto-c uppercase lightgrey">
      <h5><%= f.label :password %></h5>
      <%= f.password_field :password, class: "form-control formtext bree" %>
    </div>

    <div class="field roboto-c uppercase lightgrey">
      <h5><%= f.label :password_confirmation %></h5>
      <%= f.password_field :password_confirmation, class: "form-control formtext bree" %>
    </div>

    <div class="submit center roboto-c">
      <%= f.submit %>
    </div>
  <% end %>
</div>
