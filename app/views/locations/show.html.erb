<div class="content">
<div class="locationcontent center toppad">

  <ul class="list-inline actions roboto-c center">
    <li><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Edit', edit_location_path(@location) %></li>

    <li><span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span><%= link_to 'Delete', location_path(@location), method: :delete, data: { confirm: 'Are you sure?' } %></li>
  </ul>

  <h2 class="roboto-c center"><%= @location.site_name %></h2>

</div>

<table class="table">

  <tbody>
    <tr>
      <td><h4 class="roboto-c">Site name:</h4></td>
      <td><p class="lightgrey"><%= @location.site_name %> </p></td>
    </tr>

    <tr>
      <td><h4 class="roboto-c">Address:</h4></td>
      <td><p class="lightgrey"><%= @location.address %></p></td>
    </tr>

    <tr>
      <td><h4 class="roboto-c">Type of property:</h4></td>
      <td><p class="lightgrey"><%= @location.type_of_property %></p></td>
    </tr>

    <tr>
      <td><h4 class="roboto-c">Other info:</h4></td>
      <td><p class="lightgrey"><%= @location.other_info %></p></td>
    </tr>

  </tbody>
</table>
</div>















